<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="citruscups.com.sitelinkmobile"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TenantSelectActivity"
            android:label="@string/activity_tenantselect">
        </activity>
        <activity
            android:name=".activities.TenantLookupActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tenant_lookup"
            android:parentActivityName=".activities.NavigationActivity">
        </activity>
        <activity
            android:name=".activities.NavigationActivity"
            android:label="@string/activity_navigation"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".activities.PaymentUnitLookupActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_payment_unit_lookup"
            android:parentActivityName=".activities.TenantLookupActivity"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".activities.NewTenantActivity"
            android:label="@string/title_activity_new_tenant"
            android:parentActivityName=".activities.TenantLookupActivity">
        </activity>
        <activity
            android:name=".activities.PaymentActivity"
            android:label="@string/title_activity_payment"
            android:parentActivityName=".activities.PaymentUnitLookupActivity"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".activities.UnitLookupActivity"
            android:label="@string/title_activity_unit_lookup"
            android:parentActivityName=".activities.NavigationActivity"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".activities.CreditCardInfoActivity"
            android:label = "@string/title_activity_creditcard_info"
            android:parentActivityName=".activities.PaymentUnitLookupActivity"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".activities.ReservationActivity"
            android:label="@string/title_activity_reservation"
            android:parentActivityName=".activities.UnitLookupActivity">
        </activity>
        <activity
            android:name=".activities.PaymentConfirmActivity"
            android:label="@string/title_activity_payment_confirm"
            android:parentActivityName=".activities.CreditCardInfoActivity">
        </activity>
    </application>

</manifest>
