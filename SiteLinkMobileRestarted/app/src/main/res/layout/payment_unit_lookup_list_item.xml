<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:shrinkColumns="*">

    <!-- Name Label -->
    <TableRow>

        <TextView
            android:id="@+id/paymentUnitNameLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="left"
            android:paddingBottom="2dip"
            android:paddingRight="5dip"
            android:text="@string/unitNameLabel"
            android:textColor="#43bd00"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/paymentUnitName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="left"
            android:paddingBottom="2dip"
            android:paddingRight="5dip"
            android:text="unitName"
            android:textSize="20sp"
            android:textColor="#acacac"/>

        <TextView
            android:id="@+id/paymentUnitId"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/paymentLedgerId"
            android:visibility="invisible"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/paymentUnitRentLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="15dp"
            android:paddingBottom="2dip"
            android:paddingRight="5dip"
            android:text="@string/unitRentLabel"
            android:textColor="#acacac"/>

        <TextView
            android:id="@+id/paymentUnitRentAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="$0.00"
            android:textColor="#5d5d5d"
            android:textStyle="bold"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/paymentUnitInsuranceLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="15dp"
            android:paddingBottom="2dip"
            android:paddingRight="5dip"
            android:text="@string/unitInsuranceLabel"
            android:textColor="#acacac"/>

        <TextView
            android:id="@+id/paymentUnitInsuranceAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="$0.00"
            android:textColor="#5d5d5d"
            android:textStyle="bold"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/paymentUnitFeesLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="15dp"
            android:paddingBottom="2dip"
            android:paddingRight="5dip"
            android:text="@string/unitFeesLabel"
            android:textColor="#acacac"/>

        <TextView
            android:id="@+id/paymentUnitFeesAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="$0.00"
            android:textColor="#5d5d5d"
            android:textStyle="bold"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/paymentUnitOtherLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="15dp"
            android:paddingBottom="2dip"
            android:paddingRight="5dip"
            android:text="@string/unitOtherLabel"
            android:textColor="#acacac"/>

        <TextView
            android:id="@+id/paymentUnitOtherAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="$0.00"
            android:textColor="#5d5d5d"
            android:textStyle="bold"/>

    </TableRow>

    <!-- Not quite doing what I want yet but works for now -->
    <TableRow>
        <View
            android:layout_width = "fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_span="2"
            android:background="@android:color/darker_gray" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/paymentUnitBalanceLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="15dp"
            android:paddingBottom="2dip"
            android:paddingRight="5dip"
            android:text="@string/unitBalanceLabel"
            android:textColor="#acacac"/>

        <TextView
            android:id="@+id/paymentUnitBalanceAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="$0.00"
            android:textColor="#5d5d5d"
            android:textStyle="bold"/>

    </TableRow>
</TableLayout>