<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/api_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/corpCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/prompt_corpCode"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:text="DEMO" />

            <EditText
                android:id="@+id/locCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/prompt_locCode"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:text="DEMO" />

            <EditText
                android:id="@+id/corpUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_corpUser"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:text="DEMO" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_password"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:text="DEMO" />

            <Button
                android:id="@+id/api_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_sign_in"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
